{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "(Windows) 0. Clean console",
      "type": "shell",
      "command": "cls",
    },
    {
      "label": "(Windows) 0. Make build directory",
      "type": "shell",
      "command": "mkdir ${workspaceFolder}\\build 2>nul || (exit 0)",
      "dependsOn": [
        "(Windows) 0. Clean console"
      ]
    },
    {
      "label": "(Windows) 1. Configure",
      "type": "shell",
      "command": "cmake -G \"Ninja\" -DCMAKE_CXX_COMPILER=clang++ -B ${workspaceFolder}\\build -S ${workspaceFolder} -DCMAKE_TOOLCHAIN_FILE=vcpkg/scripts/buildsystems/vcpkg.cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "dependsOn": [
        "(Windows) 0. Make build directory"
      ]
    },
    {
      "label": "(Windows) 2. Build",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build -- -k 0", // stop on first error
      // "command": "cmake --build ${workspaceFolder}/build", // continue on error
      "dependsOn": [
        "(Windows) 1. Configure"
      ]
    },
    {
      "label": "(Windows) 6. Run Server",
      "type": "shell",
      "command": "start ${workspaceFolder}/build/example_chat.exe server",
      "dependsOn": [
        // "(Windows) 2. Build"
      ]
    },
    {
      "label": "(Windows) 7. Run Client",
      "type": "shell",
      "command": "start ${workspaceFolder}/build/example_chat.exe client 127.0.0.1",
      "dependsOn": [
        // "(Windows) 2. Build"
      ]
    }
  ]
}
